<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.myapplication.data.remote.model.CurrencyHistoryChild" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_130"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSymbol"
            style="@style/textSubTitle"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:text="@{viewModel.component1()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRate"
            style="@style/textSubTitle"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(viewModel.component2())}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSymbol" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>