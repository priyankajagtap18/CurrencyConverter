<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.myapplication.ui.main.CurrencyConverterViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_10">

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            style="@style/textTitle"
            android:layout_marginStart="@dimen/size_20"
            android:text="@string/from" />

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            style="@style/textTitle"
            android:layout_marginEnd="@dimen/size_20"
            android:text="@string/to"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spFromCurrency"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFrom"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@android:drawable/spinner_background"
            android:padding="@dimen/size_20" />

        <ImageView
            android:id="@+id/ivSwap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFrom"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_toEndOf="@id/spFromCurrency"
            android:paddingTop="@dimen/size_20"
            app:srcCompat="@drawable/ic_swap"
            android:contentDescription="@string/swap" />

        <Spinner
            android:id="@+id/spToCurrency"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTo"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/size_20"
            android:background="@android:drawable/spinner_background"
            android:padding="@dimen/size_20" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFrom"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:layout_below="@id/spFromCurrency"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:inputType="numberDecimal"
            android:maxLength="50"
            android:text="@={viewModel.convertedFromValue}" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTo"
            android:layout_width="@dimen/size_130"
            android:layout_height="wrap_content"
            android:layout_below="@id/spToCurrency"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:inputType="numberDecimal"
            android:maxLength="50"
            android:text="@={viewModel.convertedToValue}" />

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etFrom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/convert" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConvert"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/currency_details" />

    </RelativeLayout>

</layout>